<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>com.pandora.cloud</groupId>
        <artifactId>pandora-cloud-dependencies</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.pandora.cloud</groupId>
    <artifactId>pandora-cloud-platform</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
    </properties>

    <modules>
        <!--PandoraCloud云服务API接口服务-->
        <module>pandora-cloud-api</module>
        <!--PandoraCloud云服务后台端服务-->
        <module>pandora-cloud-console</module>
        <!--PandoraCloud云服务监控端服务-->
        <module>pandora-cloud-dashboard</module>
        <!--PandoraCloud云服务大数据端服务-->
        <module>pandora-cloud-data</module>
        <!--PandoraCloud云服务大数据端服务-->
        <module>pandora-cloud-gateway</module>
        <!--PandoraCloud云服务整合模块-->
        <module>pandora-cloud-generator</module>
        <!--PandoraCloud云服务整合模块-->
        <module>pandora-cloud-integration</module>
        <!--PandoraCloud云服务Dao层模块-->
        <module>pandora-cloud-mapper</module>
        <!--PandoraCloud云服务App端服务-->
        <module>pandora-cloud-mobile</module>
        <!--PandoraCloud云服务Model模块-->
        <module>pandora-cloud-model</module>
        <!--PandoraCloud云服务Model模块-->
        <module>pandora-cloud-open</module>
        <!--PandoraCloud云服务Model模块-->
        <module>pandora-cloud-program</module>
        <!--PandoraCloud云服务Model模块-->
        <module>pandora-cloud-schedule</module>
        <!--PandoraCloud云服务Model模块-->
        <module>pandora-cloud-service</module>
        <!--PandoraCloud云服务后台端服务-->
        <module>pandora-cloud-business</module>
        <!--PandoraCloud云服务Undertow启动-->
        <module>pandora-cloud-undertow</module>
        <!--PandoraCloud云服务Tomcat启动-->
        <module>pandora-cloud-tomcat</module>
    </modules>


    <dependencies>
        <!-- 热部署模块 -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-devtools</artifactId>
            <optional>true</optional>
        </dependency>
        <!-- 测试模块 -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
            <exclusions>
                <exclusion>
                    <groupId>com.vaadin.external.google</groupId>
                    <artifactId>android-json</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <!-- develop 环境 -->
            <id>develop</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <profile.active>develop</profile.active>
                <logback.dir>./app/logs</logback.dir>
            </properties>
        </profile>
        <profile>
            <!-- preview环境 -->
            <id>test</id>
            <properties>
                <profile.active>test</profile.active>
                <logback.dir>./app/logs</logback.dir>
            </properties>
        </profile>
        <profile>
            <!-- preview环境 -->
            <id>preview</id>
            <properties>
                <profile.active>preview</profile.active>
                <logback.dir>./app/logs</logback.dir>
            </properties>
        </profile>
        <profile>
            <!-- product 环境 -->
            <id>product</id>
            <properties>
                <profile.active>product</profile.active>
                <logback.dir>./app/logs</logback.dir>
            </properties>
        </profile>
    </profiles>
</project>